@model News.Models.UserRoleViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="container-fluid" style="margin-top: 15px">
    <div class="row">
        <div class="d-grid gap-2 col-3 mx-auto">
        <a asp-controller="Admin" asp-action="Add" class="btn btn-success">Добавить статью</a>
        <a asp-controller="Users" asp-action="User" class="btn btn-success">Пользователи</a>
        </div>
    </div>
</div>
<div class="container-fluid container-xxl col-12" style="margin-top:25px">
    <table class="table text-center">
          <thead>
            <tr>
              <th scope="col-4">Логин</th>
              <th scope="col-4">Роли</th>
              <th scope="col-4">Действия</th>
            </tr>
          </thead>
            @{
            foreach (var user in Model.Users)
            {   
                <tbody>
                    <tr>
                        <td asp-for="userName">@user.UserName</td>
                        <td>  
                        <form method="post">
                                @{
                                    
                                        foreach (var role in Model.AllRoles)
                                        {
                                            foreach (var userRole in user.Roles)
                                            {
                                                if (userRole == role)
                                                {
                                                <input  name="roles" checked="false" type="checkbox" value="@role" />

                                                    @role

                                                    <br/>
                                                    
                                                }
                                                else
                                                {
                                                    <input  name="roles"  type="checkbox" value="@role"/>

                                                    @role

                                                    <br/>
                                                    
                                                }
                                            }

                                        }
                                    }
                                    
                                    
                        </form>
                        </td>
                                    
@{
    //<ul class="dropdown-menu">
    //            <li></li>
    //            <li><a class="dropdown-item" asp-controller="Users" asp-action="AddRoleModer"asp-route-id="@item.Id">Moderator</a></li>
    //            <li><a class="dropdown-item" asp-controller="Users" asp-action="AddRoleUser" asp-route-id="@item.Id">User</a></li>
    //</ul>
}
                                <td>
                                <div class="dropdown">
                                    <button class="btn btn-success dropdown-toggle" style="margin-left:5px" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    Удалить роль
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="RemoveRoleAdmin" asp-route-id="@user.Id">Admin</a></li>
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="RemoveRoleModer"asp-route-id="@user.Id">Moderator</a></li>
                                        <li><a class="dropdown-item" asp-controller="Users" asp-action="RemoveRoleUser" asp-route-id="@user.Id">User</a></li>
                                    </ul>
                                            </div>
                              
                                        <a asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Удалить пользователя</a>



                        </td>
                                            </tr>
                  </tbody>

            }
        }
    </table>
</div>
